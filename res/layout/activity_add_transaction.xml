<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" >

<RelativeLayout
    android:layout_width="314dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddTransactionActivity" >

    <EditText
        android:id="@+id/add_trans_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="@string/transactionName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_trans_amount"
        android:layout_alignBottom="@+id/add_trans_amount"
        android:layout_alignParentLeft="true"
        android:text="@string/dollarSign" />

    <EditText
        android:id="@+id/add_trans_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/add_trans_name"
        android:layout_below="@+id/add_trans_name"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_trans_amount"
        android:layout_below="@+id/add_trans_amount" >

        <RadioButton
            android:id="@+id/radio_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/withdrawal" />

        <RadioButton
            android:id="@+id/radio_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deposit" />
    </RadioGroup>

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_toRightOf="@+id/textView2"
        android:calendarViewShown="false" />


    <Spinner
        android:id="@+id/category_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/datePicker1"
        android:layout_below="@+id/datePicker1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:entries="@array/categories" />
    
    <Button
        android:id="@+id/finish_transact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_spinner1"
        android:layout_marginTop="30dp"
        android:onClick="finishTransaction"
        android:text="@string/submit" />
    
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/finish_transact"
        android:layout_alignBottom="@+id/finish_transact"
        android:layout_toRightOf="@+id/radioGroup1"
        android:onClick="cancelAdd"
        android:text="@string/cancel" />
    
</RelativeLayout>

</ScrollView>